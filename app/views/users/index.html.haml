.container
  .row
    .col-md-12
      %table.table.table-border.datatable.responsive
        %thead
          %tr
            %th
              Nombre
            %th
              Correo electrónico
            %th
              Teléfono
            %th
              Estado
            %th
              Rol
            %th
        %tbody
          - @users.each do |user|
            %tr
              %td
                = user.name
              %td
                = user.email
              %td
                = user.phone_number
              %td
                = user.status
              %td
                = user.huminize_role
              %td
                .btn-group
                  %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %span.glyphicon.glyphicon-pencil
                    %span.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Ver información', user_path(user)
                    %li.divider
                    %li
                      = link_to 'Eliminar usuario', user_path(user), method: :delete, data: { confirm: '¿Estás seguro?' }

      = link_to 'Invitar usuario', new_user_invitation_path, class: 'btn btn-default'

