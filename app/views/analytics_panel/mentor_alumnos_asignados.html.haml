					%tr.warning
						%td.bold En blanco*
						%td.text-center=@enblanco
					%tr.active
						%td.bold Activos
						%td.text-center=@activos
					%tr.active
						%td.bold ZZZ
						%td.text-center=@zzzzz		
					
					- @mentors.each do |mentor|
						%tr
							%td.bold=mentor.name
							%td.text-center=mentor.linked_students
					
			%center
				= paginate @mentors 			