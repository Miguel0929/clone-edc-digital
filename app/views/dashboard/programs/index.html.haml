.container
  .row
    .col-md-12
      - @programs.in_groups_of(3, false) do |group_programs|
        .row
          - group_programs.each do |program|
            .col-md-4
              .panel.panel-default
                .panel-heading
                  %h3.panel-title.text-center
                    = program.name
                .panel-body
                  .text-center
                    = link_to 'Iniciar', dashboard_program_path(program), class: 'btn btn-default'
