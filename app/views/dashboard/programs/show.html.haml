.container-fluid.container-fixed-lg
  .row
    .col-sm-12
      .modulo-contenido-detallado
        %h2 Detalles del contenido
        - @program.chapters.each do |chapter|
          .sm-m-l-5.sm-m-r-5
            #accordion.panel-group{"aria-multiselectable" => "true", :role => "tablist"}
              .panel.panel-default
                .panel-heading{:role => "tab", :id=>"heading_#{chapter.id}"}
                  %h4.panel-title
                    %a{"aria-controls" => "collapse_#{chapter.id}", "aria-expanded" => "true", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse_#{chapter.id}"}
                      = chapter.name

                .panel-collapse.collapse.in{:id=>"collapse_#{chapter.id}", "aria-labelledby" => "heading_#{chapter.id}", :role => "tabpanel"}
                  .panel-body
                    %table.table.table-striped.table-top-border
                      %tbody
                        - chapter.chapter_contents.each do |content|
                          %tr.odd.gradeX
                            %td
                              %button.btn.btn-default.btn-rounded{:type => "button"}
                                - if content.coursable_type == 'Lesson'
                                  %i.fa.fa-youtube-play
                                - elsif content.coursable_type == 'Question'
                                  %i.fa.fa-tasks

                            %td
                              - if content.coursable_type == 'Lesson'
                                = content.model.identifier
                              - elsif content.coursable_type == 'Question'
                                = content.model.question_text
                            %td
                              %span.label.label-success Completado
                            %td
                              - if content.coursable_type == 'Question'
                                Comentarios
                                %span.badge
                                  = content.model.comments_for(current_user)

                            %td.table-actions
                              .btn-toolbar{:role => "toolbar"}
                                .btn-group.sm-m-t-10
                                  = link_to dashboard_chapter_content_path(content), class: 'btn btn-default' do
                                    %span.glyphicon.glyphicon-play-circle
