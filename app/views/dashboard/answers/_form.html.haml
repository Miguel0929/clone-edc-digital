= bootstrap_form_for([:dashboard, @chapter_content, @answer]) do |f|
  = f.hidden_field :user_id
  = f.hidden_field :question_id

  = render partial: "/dashboard/answers/inputs/#{@question.question_type}", locals: { disabled: false, f: f}

  .text-right
    %button.btn.btn-sm.btn-success.btn-cons.m-b-10{:type => "submit"}
      %i.fa.fa-save
      %span.bold Guardar respuesta
