.container-fluid.container-fixed-lg
  .panel.panel-default
    .panel-heading
      .panel-title.question-title
        = @chapter_content.chapter.name
      .panel-title.pull-right
        - unless @answer.rubric.nil?
          = image_tag(image_for_rubric(@answer.rubric.criteria), :class=> 'rating-image',"data-original-title" => "Esta pregunta ha sido evaluada como #{@answer.rubric.criteria.downcase}", "data-toggle" => "tooltip")
        = link_to edit_dashboard_chapter_content_answer_path(@chapter_content, @answer), class: 'btn btn-sm btn-primary btn-cons m-b-10', style: 'color:#fff;' do
          %i.fa.fa-edit
          %span.bold Editar respuesta
      .clearfix
    .panel-body
      .row
        .col-md-10.col-md-offset-1
          .padding-30.m-t-50.p-b-100
            %i.fa.fa-tasks.fa-2x.hint-text
            %h2
              = @question.question_text
            = bootstrap_form_for([:dashboard, @chapter_content, @answer]) do |f|
              = f.hidden_field :user_id
              = f.hidden_field :question_id

              = render partial: "/dashboard/answers/inputs/#{@question.question_type}", locals: { disabled: true, f: f}

            %p.small.hint-text.m-t-15
              = @question.support_text
      .row
        .col-sm-12
          - if @chapter_content.higher_item
            .pull-left
              %a.btn.btn-sm.btn-info.btn-cons.m-b-10{href: dashboard_chapter_content_path(@chapter_content.higher_item)}
                %i.fa.fa-backward
                %span.bold Anterior
          - if @chapter_content.lower_item
            .pull-right
              %a.btn.btn-sm.btn-info.btn-cons.m-b-10{href: dashboard_chapter_content_path(@chapter_content.lower_item)}
                %span.bold Siguiente
                %i.fa.fa-forward

  .timeline-container.top-circle
    - if @answer.comments.count > 0
      - @answer.comments.each do |comment|
        .panel.panel-transparent
          .timeline-point.warning.pl10
            %i.pg-social
          .timeline-content
            .card.share.full-width
              -#%button.close.tacha{"data-original-title" => "Eliminar comentario", "data-toggle" => "tooltip", :title => ""}
                -#%i.fa.fa-times{"aria-hidden" => "true"}
              .card-header.clearfix
                .user-pic
                  = image_tag('rubensito-01.png', height: 33)
                %h5
                  = comment.user.name
                %h6
                  = comment.created_at.strftime('%d %B %Y, %H:%M %p')
              .card-description
                %p
                  = comment.content
  .row.text-center.m-b-40
    .col-sm-12
      = bootstrap_form_for([:dashboard, @answer, Comment.new]) do |f|
        = f.text_area :content, hide_label: true, rows: 3, placeholder: 'Escribe un comentario', rows: 10
        = f.submit 'Agregar nuevo comentario', class: 'btn btn-primary btn-lg'
