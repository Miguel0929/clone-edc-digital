- answer_to_array(question).each_with_index do |answer, index|
  .row
    .col-md-4
      .checkbox.check-success
        = check_box_tag "answers[#{i}][answer_text]", answer, answer_is_selected?(answers, answer), id: "check_#{answers.quiz_question_id}_#{index}", disabled: disabled
        %label{:for => "check_#{answers.quiz_question_id}_#{index}" }
          = answer.split('~')[0]
