.container-fluid.container-fixed-lg
  = form_tag dashboard_quiz_answers_path do  
    -@answers.each_with_index do |answer|
      = fields_for 'answers[#{index}]', answer do |f| 
        .panel.panel-default
          .panel-heading
            .panel-title.question-title
              = @quiz.name
          .panel-body
            .row
              .col-md-10.col-md-offset-1
                .padding-30.m-t-50.p-b-100
                  %i.fa.fa-tasks.fa-2x.hint-text
                %h2
                  = answer.quiz_question.question_text
                = f.hidden_field :user_id
                = f.hidden_field :quiz_question_id
                = render partial: "/dashboard/quiz_answers/inputs/#{answer.quiz_question.question_type}", locals: { disabled: false, f: f, question: answer.quiz_question, answers: answer}
