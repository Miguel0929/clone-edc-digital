!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title EDC Digital
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default{:role => "navigation"}
      .container
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_url } EDC Digital
          / Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in? && current_user.admin?
              %li
                = link_to 'Usuarios', users_path
              %li
                = link_to 'DiseÃ±o de programas', programs_path
            -#- if user_signed_in? && (current_user.mentor? || current_user.admin?)
            - if user_signed_in? && (current_user.student? || current_user.mentor? || current_user.admin?)
              %li
                = link_to 'Programas', dashboard_programs_path
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %span.glyphicon.glyphicon-user
                %b.caret
              %ul.dropdown-menu
                - if user_signed_in?
                  %li
                    = link_to 'Sign out', destroy_user_session_path, method: :delete
                - else
                  %li
                    = link_to 'Sign in', new_user_session_path
    %p.notice
      = notice
    %p.alert
      = alert
    = yield
