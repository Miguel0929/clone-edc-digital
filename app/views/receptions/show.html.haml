                = f.text_field :last_name, label: "Apellidos:", required: "required"
            = f.phone_field :phone_number, label: "Telefono:", required: "required"
            = f.email_field :email, label: "Correo Electr√≥nico:", required: "required"
            = f.hidden_field :group_id, value: @group.id, required: "required"
            = f.submit "Registrar", class: "btn btn-primary"
