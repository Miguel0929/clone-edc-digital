<%= form_for :conversation , url: :conversations, html: { class: "" } do |f| %>
	<div class="form-group">
		<%= f.label :contactos %>
		<%= f.select(:recipients, current_user.group_users {|p|[p.name, p.id]},{},{ multiple: true, class: "form-control"})  %>
	</div>
	<div class="form-group">
		<%= f.label :asunto%>
		<%= f.text_field :subject, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :mensaje %>
		<%= f.text_area :body, class: "form-control", placeholder: "Escribe tu mensaje aqui", rows:4 %>
	</div>
	<%=f.submit "Enviar", class: "btn btn-success" %>
<%end%>			