<div class="container">
	<div class="spacer"></div>
	<div class="col-md-12">	
	</div>
	<div class="col-md-4">
		<center>
			<%= link_to "Enviar mensaje", new_conversation_path, class: "btn btn-success" %>
			<div class="spacer"></div>
			<br>
		</center>
		<div class="panel panel-default">
			<div class="panel-body">
				<%= render partial: 'mailbox/folders' %>
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<div class="pull-right">
			<% if conversation.is_trashed?(current_user) %>
				<%= link_to "Restaurar", untrash_conversation_path(conversation), class: "btn btn-info", method: :post %>
			<%else%>
				<%= link_to "Eliminar", trash_conversation_path(conversation), class: "btn btn-danger", method: :post, data: {confirm: "Estas Seguro?"} %>			
			<%end%>
		</div>
		<br>
		<br>	
		<div class="spacer"></div>
		<div class="panel panel-default">
			<center>
				<h5><b>Asunto: </b><%=@receipts.first.message.subject%></h5>
			</center>
			<div class="panel-body" style="height: 300px; overflow-y: scroll;">
				<%= render partial:'messages'%>
			</div>
			<div class="panel-footer">
				<%= form_for :message, url: reply_conversation_path(conversation), :html => { :onsubmit => "return validar()" } do |f|%>
					<div class="form_group">
						<%= f.text_area :body, placeholder: "  Responder mensaje", rows: 4, class: "form_control col-md-12 editable", style: "height:90px; background-color:white;" %>
					<div>
					<div class="form_group">
						<%= f.label :adjuntar %>
						<%= f.file_field :attachment %>
					</div>		
					<%= f.submit "Responder", class: "btn-danger btn pull-right", id:"i_submit"%>
				<%end%>
				<div class="clearfix"></div>		
			</div>
		</div>
	</div>
</div>
<script >
		function validar() {
    		if (window.File && window.FileReader && window.FileList && window.Blob)
    		{
        		var fsize = $('#message_attachment')[0].files[0].size;
       
        		if(fsize>10485760) //do something if file size more than 1 mb (1048576)
        		{
            		alert("Archivo muy grande, el tama√±o maximo permitido es de 10MB");
            		return false;
        		}
    		}else{
        		alert("Please upgrade your browser, because your current browser lacks some new features we need!");
    		}
		};
</script>	