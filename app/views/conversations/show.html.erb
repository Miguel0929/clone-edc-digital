<div class="container">
	<div class="spacer"></div>
	<div class="col-md-12">

	<%= link_to "Compose", new_conversation_path, class: "btn btn-success" %>
	<% if conversation.is_trashed?(current_user) %>
		<%= link_to "Untrash", untrash_conversation_path(conversation), class: "btn btn-info", method: :post %>
	<%else%>
		<%= link_to "Move to trash", trash_conversation_path(conversation), class: "btn btn-danger", method: :post, data: {confirm: "Estas Seguro?"} %>
	<%end%>	
	<div class="spacer"></div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-body">
				<%= render partial: 'mailbox/folders' %>
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<%= render partial:'messages'%>
			</div>
			<div class="panel-footer">
				<%= form_for :message, url: reply_conversation_path(conversation) do |f|%>
					<div class="form_group">
						<%= f.text_area :body, placeholder: "Reply message", rows: 4, class: "form_control" %>
					<div>
					<%= f.submit "Reply", class: "btn-danger btn pull-right"%>
				<%end%>
				<div class="clearfix"></div>		
			</div>
		</div>
	</div>
</div>	