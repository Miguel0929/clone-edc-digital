- content_for :title  do
    Nuevo mensaje - EDC Digital

.container-fluid.container-fixed-lg.top-container-padding.minus-30
    %section.demo-bg-section.p-b-15.p-t-15.panel-title-ayuda
        .container-fluid
            .md-p-l-20.md-p-r-20.xs-no-padding
                .row.col-md-12
                    .col-sm-4.col-md-4.no-padding.xs-p-l-15.xs-p-r-15
                        %h2.text-white 
                            Nuevo mensaje
                    .col-sm-8.col-md-8.no-padding.resp-p-l-50.xs-p-l-15.xs-p-r-15
                        %h5.text-white
                            = current_user.mentor? || current_user.profesor? ? '' : 'Tu buzón en EDC Digital'
                        %p.m-b-25.text-white
                            = current_user.mentor? || current_user.profesor? ? 'Escribe un nuevo mensaje' : 'Comunícate con tus profesores de manera rápida y sencilla. Envía y recibe mensajes. ¡No pierdas contacto!'

.container-fluid.container-fixed-lg.m-t-20
    .row
        .col-sm-12
            .panel.panel-transparent
                .pabel-body
                    = render partial: 'mailbox/folder_view', locals: { is_conversation: true }
:javascript
    function validar() {
        if (window.File && window.FileReader && window.FileList && window.Blob)
        {
            var fsize = $('#conversation_attachment')[0].files[0].size;
            if(fsize>10485760) //do something if file size more than 1 mb (1048576)
            {
                alert("Archivo muy grande, el tamaño maximo permitido es de 10MB");
                return false;
            }
        }else{
            alert("Por favor actualiza tu navegador porque a su versión actual le faltan algunas características que necesitamos.");
        }
    };
