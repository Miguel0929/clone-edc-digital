.container-fluid.container-fixed-lg.bg-white
  .panel.panel-transparent
    .panel-heading
      .pull-right
        .col-xs-12
          %input#search-table.form-control.pull-right{:placeholder => "Search", :type => "text"}/
      .clearfix
    .panel-body
      %table.table.table-hover.datatable
        %thead
          %tr
            %th Nombre
            %th Clave
            %th

        %tbody
          - @groups.each do |group|
            %tr
              %td= group.name
              %td= group.key
              %td
                .btn-group
                  %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %span.glyphicon.glyphicon-pencil
                    %span.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Información del grupo', group_path(group)
                    %li
                      = link_to 'Editar', edit_group_path(group)
                    %li.divider
                    %li
                      = link_to 'Eliminar', group, :method => :delete, :data => { :confirm => '¿Estás seguro?' }

      = link_to 'Crear grupo', new_group_path, class: 'btn btn-default'
