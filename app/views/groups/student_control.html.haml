.container-fluid.container-fixed-lg.bg-white
	.panel.panel-transparent
		.panel-heading
			.pull-left
				%h4
					Alumnos vinculados al 
					= @group.name
			.pull-right
				.col-xs-12
					/%input#search-table.form-control.pull-right{:placeholder => "Search", :type => "text"}/
					= bootstrap_form_for @group do |f|
						= f.select :user_ids, User.mentors.invitation_accepted.collect{|u| [u.name, u.id]}, {include_blank: false, label: 'Mentores'}, multiple: 'multiple'
			.clearfix
		.panel-body