.row
  .col-sm-12
    %span.handle-sort
      [mover]
    %span.bold
      Pregunta
    .pull-right
      %a.cursor.p-r-10{"data-toggle"=>"modal", "data-target"=>"#addQuestion", "onclick"=>"edit_question(\'#{chapter.id}\',#{question.to_json});"} 
        %i.fa.fa-edit
        Editar
      = link_to clone_chapter_question_path(chapter, question), class: 'p-r-10', method: :post, data: {confirm: '¿Estás seguro?'} do
        %i.fa.fa-copy
        Clonar
      = link_to chapter_question_path(chapter, question), class: 'p-r-10', method: :delete, data: {confirm: '¿Estás seguro?'} do
        %i.fa.fa-times
        Eliminar

%div
  = question.question_text

.question-wrapper
  = render partial: "questions/inputs/#{question.question_type}", locals: { question: question }

%span.option
  Valor:
  = question.points
  puntos

