	= f.text_field :name, label: 'Nombre del texto:'
	= f.text_area :redaction, ckeditor: { language: 'es'}, id: 'ckeditor', label: 'Redata el texto aqu√≠'
	.pull-right
		=link_to dashboard_pathway_path do
			%button.btn.btn-info.m-l-10
