.container-fluid.container-fixed-lg.bg-white
  .panel.panel-transparent
    .panel-heading
      %h2
        Detalle del grupo: #{@group.name}

    .panel-body
      .row
        .col-md-6
          %h5
            Programas habilitados para este grupo
          %ul
            - @group.programs.each do |program|
              %li
                = program.name
        .col-md-6
          %h5
            Profesores vinculados a este grupo
          %ul
            - @group.users.each do |user|
              %li
                = user.name
      %h4
        Lista de alumnos
      .row
        .col-md-10
          = link_to mentor_group_path(@group, format: :xlsx), class: "btn btn-success pull-left" do
            Exportar a Excel 
            %i.fa.fa-file-excel-o
        .col-md-2
          %input#group_student.form-control.pull-right{:placeholder => "Search", :type => "text"}/
          
      %table.table.table-striped
        %thead
          %th
            Nombre del alumno
          %th
            Correo electrÃ³nico
          %th
            Porcentaje contestado
          %th
            Procentaje de avance
          %th
            Total de comentarios
          %th
        %tbody
          - @students.each do |student|
            %tr
              %td
                = student.name
              %td
                = student.email
              %td
                #{student.answered_questions_percentage} %
              %td
                #{student.content_visited_percentage} %
              %td
                = student.comments.count
              %td
                = link_to 'Ver detalle', mentor_student_path(student)
