- content_for :title  do
  Grupos - EDC Digital

- average, contestados = @group.answered_refilables
.container-fluid.container-fixed-lg.top-container-padding.minus-30
  %section.demo-bg-section.p-b-15.p-t-30.panel-title-perfil
    .container-fluid
      .md-p-l-20.md-p-r-20.xs-no-padding
        .row.col-md-12
          .col-sm-4.col-md-4.no-padding.xs-p-l-15.xs-p-r-15
            %h5.text-white.m-b-0 
              Detalle de grupo
            %h2.text-white.m-t-0
              #{@group.name}
          .col-sm-8.col-md-8.no-padding.resp-p-l-50.xs-p-l-15.xs-p-r-15
            %h5.text-white
              Monitorea el avance de los grupos a los que estÃ¡s vinculado, asÃ­ como el avance de cada alumno. 
            = link_to  mentor_groups_path, class: 'btn btn-sm btn-complete btn-cons m-b-10' do
              %i.fa.fa-reply
              %span.bold Regresar a mis grupos

- current_stats = @group.get_group_stat(@group)

.container-fluid.container-fixed-lg
  .panel.panel-default
    .panel-body
      .row
        .col-md-12
          .pull-right
            .btn-group{"role" => "group", "aria-label" => "..."}
              = link_to "Programas.", mentor_group_path(@group), class: 'btn btn-default'
              = link_to "Plantillas.", template_refilables_mentor_group_path(@group), class: 'btn btn-default active'
              = link_to "Evaluaciones.", quizzes_mentor_group_path(@group), class: 'btn btn-default'
      .row.m-b-20
        .col-md-12
          %h5
            Plantillas habilitadas
            %span.text-success.font-montserrat{style: "font-size: 12px !important;"}
              (#{@group.all_refilables.count} plantillas)
          .m-t-10.p-l-20
            - @group.all_refilables.each_with_index do |template, index|
              = link_to template_refilable_path(template) do
                .label.program-labels{"data-toggle": "tooltip", "data-original-title": "#{template.name}"}
                  = "Pla-#{index}"    
      .row.m-b-20
        .col-md-12
          %h5
            Profesores vinculados
            %span.text-success.font-montserrat{style: "font-size: 12px !important;"}
              (#{@group.users.count} profesores)
          .m-t-10.p-l-20
            - @group.users.each_with_index do |user, index|
              %span.m-l-5.text-success
                #{ (index != 0) ? "/ " : ""} 
              %span.m-l-5
                #{user.name}
      .row.m-b-20
        .row.p-l-15
          .col-md-4
            %h5
              Alumnos del grupo
              %span.text-success.font-montserrat{style: "font-size: 12px !important;"}
                (#{current_stats.group_students} alumnos)
          .col-md-6.col-md-offset-2
            .small.p-b-5
              %span.small-text Promedio contestado:
              %span.text-success.font-montserrat.small-text #{average}%
            .progress.progress-small.m-b-5
              .progress-bar.progress-bar-primary{:style => "width: #{average}%"}                      

.container-fluid.container-fixed-lg
  .panel.panel-default
    .panel-body
      .row.m-b-20
        .col-sm-6
          %h4
            Lista de alumnos
        .col-sm-6
          .pull-right.m-t-10
            %input#group_student.form-control.pull-right{:placeholder => "Buscar", :type => "text"}/ 

      .table-responsive   
        %table.table.table-striped
          %thead
            %th{width: "27%"}
              Datos del alumno
            %th{width: "23%"}
              Avances del alumno
            %th
              Plantillas
          %tbody
            - @students.each_with_index do |student, index|
              - prog= Refilable.where(template_refilable_id: @group.all_refilables, user_id: student).count
              - if prog == 0
                - progreso = 0
              - else 
                - progreso = (prog * 100)/(@group.all_refilables.count) 
              %tr
                %td.p-b-20
                  .m-b-5
                    = link_to student.name, mentor_student_path(student)
                  %ul.p-l-0.m-b-0
                    %li.inline 
                      %i.fa.fa-envelope
                    %li.inline 
                      = student.email
                  %ul.p-l-0.m-b-0
                    %li.inline 
                      = link_to summary_mentor_student_path(student) do
                        %i.fa.fa-bolt
                        Ver resumen
                %td
                  .m-b-10
                    %i.fa.fa-edit
                    %span Plantillas contestadas:
                    %strong #{progreso}%
                %td
                  %ul.list-inline.no-style.unstyled
                    - @group.all_refilables.each_with_index do |refilable, index|
                      %li 
                        = link_to mentor_student_refilable_path(student, refilable) do
                          -answered = Refilable.where(template_refilable: refilable, user: student).count

                          .label.program-labels{:class => "#{answered == 0? '' : 'p-sides-14-2 label-success'}", "data-toggle": "tooltip", "data-original-title": "#{refilable.name}"}
                            = "Pla-#{index}"
                            %i.fa{:class => "#{answered > 0? 'fa-check' : ''}"}

      %center
        =paginate @students