.container
  .row
    .col-md-12
      %h2.text-center
        Diseño del exámen
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            = @quiz.name
        .panel-body
          .sortable
          - @quiz.quiz_questions.each do |question|
            .well 
              = render partial: 'quiz_questions/question', locals: {question: question, quiz: @quiz}
          .text-center
            = link_to 'Agregar pregunta', new_quiz_quiz_question_path(quiz_id: @quiz), class: 'btn btn-primary'
/%p#notice= notice
/%p
/  %b Name:
/  = @quiz.name
/%p
/  %b Description:
/  = @quiz.description
/
/= link_to 'Edit', edit_quiz_path(@quiz)
/\|
/= link_to 'Back', quizzes_path
