%span.pull-right.cell-down.modules-menu-list
	= link_to support_quiz_quiz_question_path(quiz, question), class: "p-r-10" do
		%i.fa.fa-paperclip
		Info. de apoyo
	= link_to edit_quiz_quiz_question_path(quiz, question), class: "p-r-10" do
		%i.fa.fa-edit
		Editar
	= link_to quiz_quiz_question_path(quiz, question), method: :delete, data: {confirm: '¿Estás seguro?'} do
		%i.fa.fa-times
		Eliminar
%span.pull-left
	= question.question_text
.clearfix
.question-wrapper.p-t-10
	= render partial: "quiz_questions/inputs/#{question.question_type}", locals: { question: question }
.option.p-t-10
	Valor:
	= question.points
	puntos
