.row
  .col-md-12
    %span.handle-sort
      [mover]
    %span.bold
      = evaluation.name
    .pull-right
      %ul.list-inline
        %li.option.p-r-10
          %strong Puntos: 
          =evaluation.points
        %li.option.p-r-10
          %a.cursor{"data-toggle"=>"modal", "data-target"=>"#addRubric", "onclick"=>"edit_rubric(\'#{template_refilable.id}\',#{ evaluation.to_json});"} 
            %i.fa.fa-edit
            Editar
        
        %li.option
          = link_to template_refilable_evaluation_refilable_path(template_refilable, evaluation), method: :delete, data: { confirm: '¿Estás seguro?'} do
            %i.fa.fa-times
            Eliminar
         
.row.p-t-15
  .col-md-12
    %p.p-l-20
      %strong Excelente:
      = evaluation.excelent
      %br
      %strong Bueno:
      = evaluation.good
      %br
      %strong Regular:
      = evaluation.regular
      %br
      %strong Malo:
      = evaluation.bad
   
       