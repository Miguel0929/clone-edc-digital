- content_for :title  do
  Rellenables - EDC Digital

.container-fluid.container-fixed-lg
  .panel.panel-default
    .panel-body
      .row
        .col-sm-8
          %h3
            Rellenables
        .col-sm-4
          .pull-right
            = link_to new_template_refilable_path, class: 'btn btn-primary m-t-15 m-r-15' do
              %i.fa.fa-plus
              Agregar rellenable
      %table.table.table-hover
        %thead
          %tr
            %th{width: "5%"}
            %th{width: "40%"} Rellenable
            %th Grupos
            %th{width: "15%"} Acciones

        %tbody.sortable{'data-update-url'=> url_prod_helper(sort_template_refilables_path())}
          - @template_refilables.each do |template_refilable|
            %tr{id: "template_refilable_#{template_refilable.id}"}
              %td.handle-sort
                [mover]
              %td
                %h5.m-t-0.m-b-5
                  = link_to template_refilable.name, edit_template_refilable_path(template_refilable)
                %ul.p-l-0.m-b-10  
                  %li.inline 
                    = template_refilable.description
              %td
                - template_refilable.groups.each do |group|
                  .label.m-r-5.m-b-5
                    = group.name.titleize
              %td
                %ul.p-l-0.m-b-10
                  = link_to template_refilable do
                    %li.inline
                      %i.fa.fa-eye
                    %li.inline 
                      Ver rellenable
                %ul.p-l-0.m-b-10
                  = link_to edit_template_refilable_path(template_refilable) do
                    %li.inline
                      %i.fa.fa-edit
                    %li.inline 
                      Editar rellenable
                %ul.p-l-0.m-b-10
                  = link_to template_refilable, :method => :delete, :data => { :confirm => 'Â¿EstÃ¡s seguro?' } do
                    %li.inline
                      %i.fa.fa-times
                    %li.inline 
                      Eliminar rellenable

