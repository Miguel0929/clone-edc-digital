= bootstrap_form_for @template_refilable do |f|
  = f.text_field :name, label: 'Nombre'
  = f.text_area :description, label: 'Descripci√≥n'

  %button.btn.btn-default#addRefilable
    Agregar rellenable
  = f.text_area :content, label: 'Contenido', class: 'ckeditor'

  = f.select :group_ids,  Group.all.collect{|p| [p.name, p.id]}, {indlude_blank: false, label: 'Grupos'}, multiple: 'multiple'
  .actions
    = f.submit 'Guardar'

:javascript
  $( document ).on('turbolinks:load', function() {

    CKEDITOR.on('instanceReady', function() {
      var editor = CKEDITOR.instances.template_refilable_content

      editor.addCommand("AddRefilable", {
        exec: function(edt) {
          edt.insertHtml("{{rellenable}}")
        }
      });
    });

    $('#addRefilable').click(function(e){
      e.preventDefault();
      var editor = CKEDITOR.instances.template_refilable_content
      editor.execCommand( 'AddRefilable' );
    })
  });
