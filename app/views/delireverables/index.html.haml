- content_for :title  do
  Paquete de Entregables - EDCdigital

.container-fluid.container-fixed-lg
  .panel.panel-default
    .panel-body
      .row.m-b-20
        .col-sm-8
          %h4
            Entregables: 
            %span.text-primary
              #{@delireverable_package.name}
        .col-sm-4
          .pull-right
            = link_to new_delireverable_package_delireverable_path(@delireverable_package), class: 'btn btn-primary m-t-10 m-r-15' do
              %i.fa.fa-plus
              Agregar nuevo entregable
      .table-responsive
        %table.table.table-hover
          %thead
            %tr
              %th{width: "10%"}
              %th
                Entregable
              %th{width: "15%"}
                Acciones
          %tbody.sortable{'data-update-url'=> url_prod_helper(sort_delireverable_package_delireverables_path(@delireverable_package))}
            - @delireverables.each do |delireverable|
              %tr{id: "delireverable_#{delireverable.id}"}
                %td.handle-sort
                  [mover]
                %td
                  %h5.m-t-0.m-b-5
                    = link_to delireverable.name, edit_delireverable_package_delireverable_path(@delireverable_package, delireverable)
                  %ul.p-l-0.m-b-10
                    %li.inline.bold
                      Descripción:  
                    %li.inline 
                      = delireverable.description                  
                %td
                  %ul.p-l-0.m-b-10
                    = link_to delireverable.file.url, target: '_blank' do
                      %li.inline
                        %i.fa.fa-eye
                      %li.inline 
                        Ver archivo
                  %ul.p-l-0.m-b-10
                    = link_to edit_delireverable_package_delireverable_path(@delireverable_package, delireverable) do
                      %li.inline
                        %i.fa.fa-edit
                      %li.inline 
                        Editar entregable
                  %ul.p-l-0.m-b-10
                    = link_to delireverable_package_delireverable_path(@delireverable_package, delireverable), method: :delete, data: { confirm: '¿Estás seguro?' } do
                      %li.inline
                        %i.fa.fa-times
                      %li.inline 
                        Eliminar entregable

