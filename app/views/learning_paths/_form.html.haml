= form_tag learning_paths_path do
  .form-group
    %label{:for => "name"} Nombre: 
    = text_field_tag :name , "", class: 'form-control'
  .form-group
    %label{:for => "programs"} Programas:   
    = select_tag "programs[]", options_from_collection_for_select(@programs, "id", "name"), multiple: 'multiple', class: 'form-control'
  .form-group
    %label{:for => "quizes"} Examenes:   
    = select_tag "quizes[]", options_from_collection_for_select(@quizes, "id", "name"), multiple: 'multiple', class: 'form-control'
  .form-group
    %label{:for => "deliverables"} Entregables:   
    = select_tag "deliverables[]", options_from_collection_for_select(@delireverables, "id", "name"), multiple: 'multiple', class: 'form-control'
  .form-group
    %label{:for => "refilables"} Rellenables:   
    = select_tag "refilables[]", options_from_collection_for_select(@refilables, "id", "name"), multiple: 'multiple', class: 'form-control'
  .form-group
    = submit_tag "Crear Ruta", class: "btn btn-primary"        