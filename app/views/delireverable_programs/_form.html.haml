.well
	= form_tag(chapter_delireverable_programs_path, method: :post) do 
		.form-group
			%label.control-label{for: :quiz_id} Entregable:
			= select_tag "delireverable_package_id", options_from_collection_for_select(DelireverablePackage.ruta, "id", "name"), class: 'form-control', required: "required", prompt: "Selecciona el entregable"
		.form-group
			= link_to 'Cancelar',  program_path(@chapter.program), class: 'btn btn-danger'	
			= submit_tag "Guardar", class: 'btn btn-default'