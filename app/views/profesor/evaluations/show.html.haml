- content_for :title  do
  Evaluación de programas - EDC Digital

.container-fluid.container-fixed-lg.top-container-padding.minus-30
  %section.demo-bg-section.p-b-15.p-t-30.panel-title-recursos
    .container-fluid
      .md-p-l-20.md-p-r-20.xs-no-padding
        .row.col-md-12
          .col-sm-4.col-md-4.no-padding.xs-p-l-15.xs-p-r-15
            %h2.text-white 
              Evaluación de módulo
          .col-sm-8.col-md-8.no-padding.resp-p-l-50.xs-p-l-15.xs-p-r-15
            %h3.text-white
              %span.p-r-10{style: "font-size:16px !important;"}
                Módulo:
              %span
                #{@chapter.name}
            = link_to profesor_evaluations_path(program_id: @program, user_id: @user), class: 'btn btn-sm btn-default btn-cons m-b-10' do
              %i.fa.fa-reply
              %span.bold Regresar a evaluación de programa
            %div.inline-block
              = link_to profesor_evaluation_path(@chapter, program_id: @program, user_id: @prev_student), class: 'btn btn-sm btn-complete btn-cons m-b-10' do
                %i.fa.fa-arrow-left
                %span.bold Alumno anterior
              = link_to profesor_evaluation_path(@chapter, program_id: @program, user_id: @next_student), class: 'btn btn-sm btn-complete btn-cons m-b-10' do
                %span.bold Siguiente alumno
                %i.fa.fa-arrow-right

- chaps_width =  (99.to_f / (@chapters_w_questions.count + 2)).to_f 
.bg-info.container-minus-40
  %ul.evaluation-ul-menu
    = link_to profesor_evaluation_path(@prev_chapter, program_id: @program, user_id: (defined?(@same_user_prev) ? @same_user_prev : @selected_user) ), class: 'evaluation-nav-link' do
      %li.text-center{style: "width: #{chaps_width}%;", "data-placement": "bottom", "data-toggle": "tooltip", "data-original-title": "#{ (@selected_user.id < @user.id) ? @prev_text + @selected_user.name : @prev_chapter.name }", class: "#{ (@selected_user.id < @user.id) ? 'text-complete' : ''}"}
        Anterior
    - @chapters_w_questions.each_with_index do |chapter, index|
      = link_to profesor_evaluation_path(chapter, program_id: @program, user_id: @user), class: 'evaluation-nav-link' do
        %li.text-center{style: "width: #{chaps_width}%; border-right: 1px dotted #3C93CE; #{(index==0) ? 'border-left: 1px dotted #3C93CE;' : ''}", class: "#{(chapter.id == @chapter.id) ? 'evaluation-nav-active' : ''}", "data-placement": "bottom", "data-toggle": "tooltip", "data-original-title": "#{chapter.name}"}
          #{index+1}
    - unless @next_chapter.nil?
      = link_to profesor_evaluation_path(@next_chapter, program_id: @program, user_id: (defined?(@same_user_next) ? @same_user_next : @selected_user) ), class: 'evaluation-nav-link' do
        %li.text-center{style: "width: #{chaps_width}%;", "data-placement": "bottom", "data-toggle": "tooltip", "data-original-title": "#{ (@selected_user.id > @user.id) ? @next_text + @selected_user.name : @next_chapter.name }", class: "#{ (@selected_user.id > @user.id) ? 'text-complete' : ''}"}
          Siguiente

.container-fluid.container-fixed-lg.bg-transparent.container-minus-30
  .panel.panel-transparent
    .panel-body
      .row
        .col-sm-7
          %h5.m-b-0
            Programa en evaluación:
          %h4.m-t-0.text-primary
            = @program.name
        - if current_user.mentor?
          .col-sm-5
            .p.text-right
              %button.btn.btn-success.btn-cons{:type => "submit", :form => "evolve", :name => "path", :value => "store"} 
                Guardar
              %button.btn.btn-info.btn-cons{:type => "submit", :form => "evolve", :name => "path", :value => "out"}
                Guardar y salir      
        - else
          .col-sm-5
            .p.text-right
              = link_to user_path(@user) do 
                %button.btn.btn-info.btn-cons
                  %i.fa.fa-reply
                  Regresar
      .row
        .col-sm-7            
          %ul.nav.nav-tabs.nav-tabs-simple.m-b-10
            %li.nav-item.tablinks.active{onclick: "openTab(event, 'tabQuestions')"}
              %a{href: "#", onclick: "return false;"} 
                Preguntas 
                %span.badge
                  = @answers.length
          .tab-content.p-b-30
            #tabQuestions.tab-pane.active.tabcontent                    
              .row
                .col-sm-12
                  .panel.panel-default
                    .panel-heading
                      .panel-title
                        Preguntas del programa
                    .panel-body
                      /%h3.text-complete.m-b-30
                      /  Módulo #{@chapter.position}: #{@chapter.name}
                      %ol.p-l-10
                        - if @answers.exists?
                          - @answers.each do |answer|
                            %li.m-b-30
                              %h5.m-b-10
                                = answer.question_text
                              - if !answer.answer_text.nil?
                                %p.answer-lead
                                  = answer.answer_text
                              - else
                                %p.answer-lead-red
                                  Sin respuesta
                              /%p.m-b-25
                              /%a.comments-count{href: '#', 'data-question'=> answer.question_id, 'data-user'=> answer.user_id, 'data-content'=> answer.chapter_content_id, 'data-url'=> mentor_question_path(answer.question_id, user_id: answer.user_id)}
                              /Comentarios:
                              /= answer.comments_count
                        - else
                          %label.label-danger.padding-5.m-b-10
                            No hay preguntas en este módulo
                             
        .col-sm-5
          .panel.panel-default
            .panel-heading
              .panel-title
                Rúbrica de evaluación
            .panel-body
              .container-fluid.p-l-0.p-r-0
                #rootwizard
                  - if @chapter.evaluations.exists?
                    / Nav tabs
                    %ul.nav.nav-tabs.nav-tabs-fillup.nav-tabs-separator.nav-stack-sm
                      - @chapter.evaluations.each_with_index do |chapter, index|
                        %li{:style => "width:30px;", :class => "#{index==0 ? 'active' : ''}"}
                          %a.p-l-11.l-h-5{"data-toggle" => "tab", :href => "#tab#{index}"}
                            = index + 1
                    / Tab panes
                    /= bootstrap_form_for(@chapter, url: mentor_evaluation_path, :html => {:id => "evolve"}) do |f|
                    /%input{type: 'hidden', name: "user_id", value: @user.id, id: "user_id"}
                    /%input{type: 'hidden', name: "program_id", value: @program.id, id: "program_id"}
                    .tab-content
                      - @chapter.evaluations.each_with_index do |evaluation, index|
                        .tab-pane.padding-20.slide-left{:id => "tab#{index}", :class => "#{index==0 ? 'active' : ''}"}
                          .row.row-same-height
                            %h5
                              = evaluation.name
                              %em{:style => "font-size:0.9em;"}
                                (#{evaluation.points} pts o #{evaluation.points * 100 / @totaleval}%)
                            %input{type: 'hidden', name: "evaluation[#{index}][evaluation]", value: evaluation.id}
                            .radio.radio-success
                              %input{type: 'radio', name: "evaluation[#{index}][points]", id: "radio_excelent_#{index}", value: '100', checked: evaluation_pointed?(evaluation, 100), disabled: true}
                              %label{for: "radio_excelent_#{index}"}
                                %strong Exelente:
                                #{evaluation.excelent}
                            .radio.radio-success
                              %input{type: 'radio', name: "evaluation[#{index}][points]", id: "radio_good_#{index}", value: '75', checked: evaluation_pointed?(evaluation, 75), disabled: true}
                              %label{for: "radio_good_#{index}"}
                                %strong Bueno:
                                #{evaluation.good}
                            .radio.radio-success
                              %input{type: 'radio', name: "evaluation[#{index}][points]", id: "radio_regular_#{index}", value: '50', checked: evaluation_pointed?(evaluation, 50), disabled: true}
                              %label{for: "radio_regular_#{index}"}
                                %strong Regular:
                                #{evaluation.regular}
                            .radio.radio-success
                              %input{type: 'radio', name: "evaluation[#{index}][points]", id: "radio_bad_#{index}", value: '25', checked: evaluation_pointed?(evaluation, 25), disabled: true}
                              %label{for: "radio_bad_#{index}"}
                                %strong Malo:
                                #{evaluation.bad}
                    
                      .padding-20.bg-white
                        %ul.pager.wizard
                          %li.next
                            %button.btn.btn-primary.btn-cons.btn-animated.from-left.fa.fa-arrow-right.pull-right{:type => "button"}
                              %span Siguiente
                          %li.previous.first.hidden
                            %button.btn.btn-default.btn-cons.btn-animated.from-left.fa.fa-check.pull-right{:type => "button"}
                              %span Primero
                          %li.previous
                            %button.btn.btn-default.btn-cons.pull-right{:type => "button"}
                              %span Anterior
                  - else 
                    .nav-tabs.nav-tabs-separator.m-b-15
                    %label.label-danger.padding-5.m-b-10
                      No hay rúbrica para este módulo
